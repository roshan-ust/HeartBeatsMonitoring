<UserControl x:Class="HeartBeats.FilterControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:utils="clr-namespace:HeartBeats.Utils"
             xmlns:controls="clr-namespace:HeartBeats.Controls"
             xmlns:models="clr-namespace:HeartBeats.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <models:FilterPreferences/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <utils:DateTimeDateTimeDetailConverter x:Key="DateTimeConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Start Date and Time (EST)" TextDecorations="Underline" Margin="5" FontSize="12"/>
            <controls:DateTimePickerControl x:Name="StartDateTimePicker" DataContext="{Binding StartDateTime, Converter={StaticResource DateTimeConverter}}" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,5">
            <TextBlock Text="End Date and Time (EST)" TextDecorations="Underline" Margin="5" FontSize="12"/>
            <controls:DateTimePickerControl x:Name="EndDateTimePicker" DataContext="{Binding EndDateTime, Converter={StaticResource DateTimeConverter}}" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
